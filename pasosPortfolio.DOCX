2?? Página de Inicio (Home.jsx)
jsx
CopyEdit
import { motion } from "framer-motion";

function Home() {
  return (
    <div className="flex flex-col items-center justify-center h-screen">
      <motion.h1
        className="text-4xl font-bold text-acento"
        initial={{ opacity: 0, y: -50 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 1 }}
      >
        Hola, soy [Tu Nombre]
      </motion.h1>
      <p className="mt-4 text-lg">Desarrollador Web</p>
    </div>
  );
}

export default Home;
3?? Página de Proyectos (Projects.jsx)
jsx
CopyEdit
function Projects() {
  const proyectos = [
    { id: 1, nombre: "Proyecto 1", descripcion: "Descripción corta", img: "ruta.jpg" },
    { id: 2, nombre: "Proyecto 2", descripcion: "Descripción corta", img: "ruta.jpg" },
  ];

  return (
    <div className="p-10">
      <h2 className="text-3xl font-bold">Mis Proyectos</h2>
      <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
        {proyectos.map((proyecto) => (
          <div key={proyecto.id} className="bg-tarjetas p-4 rounded-lg shadow-lg">
            <img src={proyecto.img} alt={proyecto.nombre} className="rounded-lg mb-2" />
            <h3 className="text-xl font-bold">{proyecto.nombre}</h3>
            <p>{proyecto.descripcion}</p>
          </div>
        ))}
      </div>
    </div>
  );
}

export default Projects;

